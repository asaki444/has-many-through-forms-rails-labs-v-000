<h1><%=@post.title%></h1>

<p><%=@post.content%></p>

<%form_for @post do |f|%>
      <%=f.label :content%>
      <%=f.text_area :content%>
      <%= f.collection_select :user_ids,  User.all, :id, :name %>
      <%= f.fields_for :comments, post.comments.build do |categories_fields| %>
          <%= categories_fields.text_field :content %>
    <% end %>
  <%=f.submit%>
<%end%>
